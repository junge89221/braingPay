<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.braing.pay.lib.page.TestActivity">
    <EditText
        android:id="@+id/edit1"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editshape"
        android:hint="商户编码"
        android:text="100000000000001"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="575262D9AAE3CA2BE0501A0AC27C0884"
        android:id="@+id/edit2"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editshape"
        android:hint="商户秘钥"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="http://www.wishcloud.com.cn/school/order/update"
        android:id="@+id/edit3"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editshape"
        android:hint="回调地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="192.168.0.99"
        android:id="@+id/edit4"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editshape"
        android:hint="ip地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初始化Sdk"
         />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单支付 "
        />


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单查询"
        />
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        />
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
