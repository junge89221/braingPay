<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBg"
    android:orientation="vertical"
    tools:context="cn.braing.pay.lib.page.BraPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/ColorFFFF"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/ColorAAB4"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/orderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="@color/Color4A4A"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额："
                android:textColor="@color/ColorAAB4"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/orderMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="@color/Color4A4A"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单备注："
                android:textColor="@color/ColorAAB4"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ordermarky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="@color/Color4A4A"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式："
                android:textColor="@color/ColorAAB4"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/orderPayType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="@color/Color4A4A"
                android:textSize="14sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付结果："
                android:textColor="@color/ColorAAB4"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/orderPayresult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="@color/Color4A4A"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
