    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/> <!-- 用于开启 debug 版本的应用在6.0 系统上 层叠窗口权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission
        android:name="android.permission.FORCE_STOP_PACKAGES"
        tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
         >
        <activity
            android:name=".page.TestActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:theme="@style/BrAppTheme"
            android:name=".page.WxH5Activity"
            android:label="微信支付"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:theme="@style/BrAppTheme"
            android:name=".page.AliPayH5Activity"
            android:label="支付宝支付"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:theme="@style/BrAppTheme"
            android:name=".page.SendMessagActivity"
            android:label="发送验证码"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:theme="@style/BrAppTheme"
            android:name=".page.FastPayActivity"
            android:label="快捷支付"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:theme="@style/BrAppTheme"
            android:name=".page.OrderDetailActivity"
            android:label="订单详情"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".page.LoginActivity"
            android:label="登录"
            android:screenOrientation="portrait"
            android:theme="@style/BrAppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".page.RegisterActivity"
            android:label="注册"
            android:screenOrientation="portrait"
            android:theme="@style/BrAppTheme.NoActionBar">
        </activity>
        <activity android:name=".page.PaymentActivity"
                  android:label="订单支付"
                  android:theme="@style/BrAppTheme"
                  android:screenOrientation="portrait"
            />
        <activity
            android:name=".view.webview.Html5Activity"
            android:label=" "
            android:theme="@style/BrAppTheme"
            android:screenOrientation="portrait"/>
    </application>

</manifest>